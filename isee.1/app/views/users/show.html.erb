<h1>ユーザー詳細ページ</h1>
<%= @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="questions">
    <% @questions.each do |question| %>
      <%= question.title %>
      <%= question.content %>
    <% end %>  
  </div>
  <div class="answers">
    <% @answers.each do |answer| %>
      <%= answer.content %>
    <% end %>  
  </div>
</div>