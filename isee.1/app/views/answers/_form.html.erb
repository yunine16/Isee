<%= form_for [question, answer] do |f| %>
  <% if answer.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% answer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  
  <%= f.text_field :content, class: "form-control" %>
  <br>
  <%= f.submit '回答する', class: 'btn btn-primary' %>
<% end %>